<?xml version="1.0" encoding="UTF-8"?>
<project name="module_javafx-ws" default="compile.module.javafx-ws">
  <dirname property="module.javafx-ws.basedir" file="${ant.file.module_javafx-ws}"/>


  <property name="module.jdk.classpath.javafx-ws" value="jdk.classpath.1.8"/>

  <property name="compiler.args" value=""/>
  <property name="compiler.args.javafx-ws" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="javafx-ws.output.dir" value="${module.javafx-ws.basedir}/out/production/JavaFX-WS"/>
  <property name="javafx-ws.testoutput.dir" value="${module.javafx-ws.basedir}/out/test/JavaFX-WS"/>
  
  <path id="javafx-ws.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="javafx-ws.module.production.classpath">
  </path>
  
  <path id="javafx-ws.runtime.production.module.classpath">
    <pathelement location="${javafx-ws.output.dir}"/>
  </path>
  
  <path id="javafx-ws.module.classpath">
    <pathelement location="${javafx-ws.output.dir}"/>
  </path>
  
  <path id="javafx-ws.runtime.module.classpath">
    <pathelement location="${javafx-ws.testoutput.dir}"/>
    <pathelement location="${javafx-ws.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.javafx-ws">
  </patternset>
  
  <patternset id="excluded.from.compilation.javafx-ws">
    <patternset refid="excluded.from.module.javafx-ws"/>
  </patternset>
  
  <path id="javafx-ws.module.sourcepath">
    <dirset dir="${module.javafx-ws.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.javafx-ws" depends="compile.module.javafx-ws.production,compile.module.javafx-ws.tests" description="Compile module JavaFX-WS"/>
  
  <target name="compile.module.javafx-ws.production" depends="register.custom.compilers" description="Compile module JavaFX-WS; production classes">
    <mkdir dir="${javafx-ws.output.dir}"/>
    <patternset refid="excluded.from.compilation.javafx-ws"/>

    <copy todir="${javafx-ws.output.dir}">
      <fileset dir="${module.javafx-ws.basedir}/src">
        <type type="file"/>
      </fileset>
    </copy>
  </target>

  <target name="register.custom.compilers"/>
  <target name="compile.module.javafx-ws.tests" depends="register.custom.compilers,compile.module.javafx-ws.production" description="compile module JavaFX-WS; test classes" unless="skip.tests"/>
  
  <target name="clean.module.javafx-ws" description="cleanup module">
    <delete dir="${javafx-ws.output.dir}"/>
    <delete dir="${javafx-ws.testoutput.dir}"/>
  </target>
</project>